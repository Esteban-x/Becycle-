{% extends 'base.html.twig' %}

{% block title %} Connexion {% endblock %}

{% block body %}

<div class="container">
    <div class="form-row mt-4 mb-3">
        <div class="col">
            <div class="card">

                <div class="card-body">

                        {{ form_start(form) }}
                    {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        {{ last_username }}
                        {{ form_widget(form) }}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="btn btn-primary"><i class="fas fa-user-circle"></i>&nbsp;se connecter</button>
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}


