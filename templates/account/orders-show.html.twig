{% extends 'base.html.twig' %}

{% block body %}
{#
 afficher la liste des produits ainsi que les info de la commande (variable array : products / variable objet : order)
#}

                    <div class="container mb-4">
                        <div class="row">
                            <div class="col-12">

                                <div class="row">
                                    <div class="col-6">
                                        <div class="card mt-5">
                                            <h5 class="card-header">Info de la commande</h5>
                                            <div class="card-body">
                                                <p class="card-title">Numero de la commande : {{ order.id }}</p>
                                                <p class="card-text">Prix total : {{ order.total }}</p>
                                                <p class="card-text">Date de la commande : {{ order.orderDate|date('d-m-Y') }}</p>
                                                <p class="card-text">Etat de la commande : {{ order.orderState }}</p>
                                                <p class="card-text">Etat de payment : {{ order.paymentState }}</p>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="card mt-5">
                                            <h5 class="card-header">Adresse de la commande</h5>
                                            <div class="card-body">
                                                <p class="card-title">Nom : {{ order.idAdress.name }}</p>
                                                <p class="card-text">Rue : {{ order.idAdress.street }}</p>
                                                <p class="card-text">Code postale : {{ order.idAdress.postalCode }}</p>
                                                <p class="card-text">Ville : {{ order.idAdress.city }}</p>
                                                <p class="card-text">Pays : {{ order.idAdress.country }}</p>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="table-responsive mt-5">
                                    <table class="table table-striped">
                                        <thead>
                                        <tr>
                                            <th scope="col" class="text-center">Nom de produit</th>
                                            <th scope="col" class="text-center"></th>
                                            <th scope="col" class="text-center"></th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                            <th scope="col"> </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for product in products %}
                                            <tr>

                                                <td class="text-center">{{ product.name }}</td>
                                                <td class="text-center">{{"a" }}</td>
                                                <td class="text-right">{{ "a" }}</td>
                                                <td class="text-center">{{ "a" }} </td>
                                                <td class="text-right">{{ "a" }}</td>
                                                <td class="text-right"></td>

                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>


            </div>
        </div>


{% endblock %}

