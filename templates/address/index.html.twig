{% extends 'base.html.twig' %}

        {% block body %}



            <div class="container">
            <div class="row">
                {% for addresse in addresses %}
                        <div class="card mt-5">
                            <div class="card-body {{addresse.active == 2 ?  "selectadd" }}">

                                <h5 class="card-title">{{addresse.name}}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Pays :&nbsp;{{addresse.country}}</h6>
                                <ul>
                                    <li>Ville :&nbsp;{{addresse.city}}</li>
                                    <li>Code postal :&nbsp;{{addresse.PostalCode}}</li>
                                    <li>Adresse :&nbsp;{{addresse.street}}</li>

                                </ul>
                                <div class="row">
                                <a  href="{{ path('address_edit',{ 'id': addresse.id }) }}" class="card-link btn btn-info ml-1"><i class="far fa-edit"></i>&nbsp;Modifier</a>
                                {{ include('address/delete.html.twig') }}
                                <a class="btn btn-success ml-1" href="{{path('address_active', {'id': addresse.id }) }}"><i class="far fa-hand-pointer"></i>&nbsp;Utiliser</a>
                            </div>
                            </div>

                    </div>
                {%  endfor  %}

            </div><br>
            <a href="{{ path('new_address') }}" class="btn btn-primary"><i class="fas fa-plus-circle"></i>&nbsp;Ajouter une adresse</a>
        </div><br>

        {% endblock %}

